{
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"jsx": "react",
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "pages/src",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "pages/src",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["pages/src/**/*"],
	"exclude": ["dist", "node_modules"],
	"compileOnSave": false
}
